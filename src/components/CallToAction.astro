---
interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonLink?: string;
  background?: 'primary' | 'secondary' | 'light';
}

const { 
  title = "Ready to bring clarity to your AI strategy?", 
  description = "Book a free discovery call to discuss your specific needs and how I can help.", 
  buttonText = "Book a Free Discovery Call", 
  buttonLink = "/contact",
  background = "primary"
} = Astro.props;

const bgClasses = {
  primary: "bg-primary-700 text-white",
  secondary: "bg-secondary-700 text-white",
  light: "bg-gray-100 text-gray-900"
};

const buttonClasses = {
  primary: "bg-white text-primary-700 hover:bg-gray-100",
  secondary: "bg-white text-secondary-700 hover:bg-gray-100",
  light: "bg-primary-600 text-white hover:bg-primary-700"
};
---

<section class={`py-12 ${bgClasses[background]}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-bold font-heading mb-4">
      {title}
    </h2>
    <p class="text-lg max-w-3xl mx-auto mb-8">
      {description}
    </p>
    <a 
      href={buttonLink} 
      class={`inline-block px-6 py-3 rounded-md shadow-sm font-medium text-base ${buttonClasses[background]} transition-colors`}
    >
      {buttonText}
    </a>
  </div>
</section>